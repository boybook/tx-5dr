{
  "name": "tx-5dr",
  "version": "1.0.0",
  "description": "TX-5DR - Shared Node backend + web browser client + optional Electron shell",
  "private": true,
  "main": "packages/electron-main/dist/main.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel --filter='!@tx5dr/client-tools' --filter='!@tx5dr/electron-main'",
    "dev:electron": "turbo run dev --parallel --filter='!@tx5dr/client-tools'",
    "build": "turbo run build",
    "preview": "yarn workspace @tx5dr/web preview",
    "electron": "yarn workspace @tx5dr/electron-main dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "package": "electron-forge package",
    "package:mac": "PLATFORM=darwin ARCH=arm64 electron-forge package",
    "package:mac:x64": "PLATFORM=darwin ARCH=x64 electron-forge package",
    "make": "electron-forge make",
    "make:mac": "PLATFORM=darwin ARCH=arm64 electron-forge make",
    "make:mac:x64": "PLATFORM=darwin ARCH=x64 electron-forge make",
    "make:mac:unsigned": "CSC_IDENTITY_AUTO_DISCOVERY=false yarn make:mac",
    "publish": "electron-forge publish",
    "start": "electron-forge start",
    "postinstall": "node scripts/fix-naudiodon.js",
    "build:package": "yarn build && yarn package",
    "build:make": "yarn build && yarn make",
    "clean": "rm -rf out/ && find packages -name dist -type d -exec rm -rf {} + || true",
    "docker:build": "scripts/docker-quick-build.sh",
    "docker:build-multi": "scripts/build-docker.sh",
    "docker:build-and-push": "scripts/build-docker.sh boybook tx-5dr latest true"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron/rebuild": "^4.0.1",
    "electron": "^36.4.0",
    "png-to-ico": "^2.1.8",
    "turbo": "^2.5.8"
  },
  "packageManager": "yarn@4.9.1",
  "optionalDependencies": {
    "segfault-handler": "^1.3.0"
  }
}
